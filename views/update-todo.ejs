<%- include('partials/header') %>
<div class="card">
  <a
    href="/"
    class="btn"
    style="
      width: fit-content;
      text-decoration: none;
      border-radius: unset;
      z-index: 1;
    "
    >Back</a
  >
  <h1>Update Todo</h1>

  <form action="/update-todo/<%=todo.id %>" method="post">
    <div>
      <label for="item">Item</label>
      <input
        type="text"
        id="item"
        name="title"
        placeholder="Enter task name"
        value="<%= todo.title %>"
        required
      />
    </div>
    <div>
      <label for="desc">Description</label>
      <textarea id="desc" name="desc" placeholder="Enter task details" required>
<%= todo.desc  %></textarea
      >
    </div>
    <button type="submit" class="btn">Update</button>
  </form>
</div>
<%- include('partials/footer') %>
