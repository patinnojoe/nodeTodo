<%- include('partials/header') %>
<div class="card">
  <h1>Delete Todo</h1>
  <p>
    Are you sure you want to delete this todo item? This action cannot be
    undone.
  </p>
  <form class="actions" action="/delete-todo/<%=todo.id%>" method="post">
    <a class="btn btn-cancel" href="/">Cancel</a>
    <button class="btn btn-confirm" type="submit">Confirm</button>
  </form>
</div>
